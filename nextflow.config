/*
 * Nextflow Configuration
 * FASTQ Processing Pipeline
 */

params {
    // Input/Output paths
    reads = "/home/diti/pipeline/test_data/*_{R1,R2}.fastq.gz"
    outdir = "results"
    
    // Reference genome
    reference = "/home/diti/pipeline/reference/test_ref.fasta"
    
    // Tool binaries (using conda environment)
    fastqc_bin = "fastqc"
    cutadapt_bin = "cutadapt"
    bwa_bin = "bwa"
    samtools_bin = "samtools"
    bcftools_bin = "bcftools"
    
    // Cutadapt parameters
    quality_cutoff = 20
    min_length = 30
}

// Process configuration
process {
    executor = 'local'
    cpus = 2
    memory = '4 GB'
}

// Execution report
report {
    enabled = true
    file = "${params.outdir}/report.html"
}

// Enable DSL2
nextflow.enable.dsl = 2
