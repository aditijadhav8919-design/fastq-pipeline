/*
 * Nextflow Configuration
 * FASTQ Processing Pipeline
 */

params {
    // Input/Output paths
    fastq_dir = "/home/diti/pipeline/test_data"
    reads = "${fastq_dir}/*_{R1,R2}.fastq.gz"
    outdir = "results"
    
    // Reference genome paths
    ref_dir = "/home/diti/pipeline/reference"
    reference = "${ref_dir}/test_ref.fasta"
    
    // Output subdirectories
    fastqc_dir = "${outdir}/fastqc"
    trimmed_dir = "${outdir}/trimmed"
    bam_dir = "${outdir}/bam"
    sorted_bam_dir = "${outdir}/sorted_bam"
    dedup_dir = "${outdir}/dedup"
    variants_dir = "${outdir}/variants"
    filtered_variants_dir = "${outdir}/filtered_variants"
    
    // Tool binaries (using conda environment)
    fastqc_bin = "fastqc"
    cutadapt_bin = "cutadapt"
    bwa_bin = "bwa"
    samtools_bin = "samtools"
    bcftools_bin = "bcftools"
    picard_bin = "picard"
    
    // Cutadapt parameters
    quality_cutoff = 20
    min_length = 30
}

// Process configuration
process {
    executor = 'local'
    cpus = 2
    memory = '4 GB'
}

// Execution report
report {
    enabled = true
    file = "${params.outdir}/report.html"
}

// Enable DSL2
nextflow.enable.dsl = 2
