/*
 * Nextflow Configuration File
 */

params {
    // Input/Output
    reads = "test_data/*_R{1,2}.fastq.gz"
    ref = "reference_genome/hg38.fa"
    outdir = "results"
    
    // Tool parameters
    threads = 4
    min_quality = 20
    min_length = 50
    
    // Binary paths (absolute paths from conda environment)
    FASTQC_BIN = "${CONDA_PREFIX}/bin/fastqc"
    CUTADAPT_BIN = "${CONDA_PREFIX}/bin/cutadapt"
    BWA_BIN = "${CONDA_PREFIX}/bin/bwa"
    SAMTOOLS_BIN = "${CONDA_PREFIX}/bin/samtools"
    BCFTOOLS_BIN = "${CONDA_PREFIX}/bin/bcftools"
    PICARD_BIN = "${CONDA_PREFIX}/bin/picard"
    QUALIMAP_BIN = "${CONDA_PREFIX}/bin/qualimap"
    MULTIQC_BIN = "${CONDA_PREFIX}/bin/multiqc"
}

process {
    executor = 'local'
    cpus = params.threads
    memory = '8 GB'
}

manifest {
    name = 'fastq-pipeline'
    description = 'NGS data quality control and variant calling pipeline'
    mainScript = 'main.nf'
    version = '1.0.0'
    nextflowVersion = '>=23.04.0'
}
