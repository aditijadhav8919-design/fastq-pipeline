params {
    // Input/Output
    reads = "/home/diti/pipeline/test_data/*_{R1,R2}.fastq.gz"
    outdir = "results"
    
    // Tool paths (using conda environment binaries)
    fastqc_bin = "fastqc"
    cutadapt_bin = "cutadapt"
    bwa_bin = "bwa"
    samtools_bin = "samtools"
    bcftools_bin = "bcftools"
    
    // Cutadapt parameters
    quality_cutoff = 20
    min_length = 30
    
    // Reference genome - CHANGE THIS TO YOUR ACTUAL REFERENCE!
    ref = "/home/diti/pipeline/reference/test_ref.fasta"
}

process {
    executor = 'local'
    cpus = 2
    memory = '4 GB'
}
